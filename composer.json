{
    "name": "ilyarein/advanced-php-mailer",
    "description": "Advanced PHP Mail Library - Improved alternative to PHPMailer",
    "version": "1.0.3",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ilya Rein",
            "email": "ilyarein@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "suggest": {
        "psr/log": "PSR-3 logging interface (optional)",
        "monolog/monolog": "Optional PSR-3 logger implementation"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "AdvancedMailer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdvancedMailer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyze"
    },
    "minimum-stability": "stable"
}
